<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgreen"
    tools:context=".sendmoney.sendMoney">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/backwhite"
                    app:shapeAppearanceOverlay="@style/RoundSqaure"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    app:srcCompat="@drawable/iconbank"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="620dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:background="@drawable/recivebutton"
                        android:text="CANCEL"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.9"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.93" />


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageView13"
                        android:layout_width="350dp"
                        android:layout_height="490dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.491"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.154"
                        app:shapeAppearanceOverlay="@style/RoundBack"
                        app:srcCompat="@drawable/up" />

                    <EditText
                        android:id="@+id/edtNotes"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edtwhitewithred"
                        android:drawableLeft="@drawable/customedtnote"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:hint="Notes"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.505"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.65" />

                    <EditText
                        android:id="@+id/edtAmount"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edtwhitewithred"
                        android:drawableLeft="@drawable/customedtmoney"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:hint="Amount"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.507"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.35000002" />

                    <TextView
                        android:id="@+id/txtBalance"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/amountsend"
                        android:drawableLeft="@drawable/amountwhite"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="15dp"
                        android:text="******"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.203"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.78" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="Send Money"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.494"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.055" />

                    <EditText
                        android:id="@+id/edtAcountNumberWallet"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edtwhitewithred"
                        android:drawableLeft="@drawable/customedtperson"
                        android:drawablePadding="5dp"
                        android:ems="10"
                        android:hint="ACC**********"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.492"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.18" />


                    <Spinner
                        android:id="@+id/aspinnerReason"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:background="@drawable/edtwhitewithred"
                        android:prompt="@string/spinner_prompt"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/btnSendMoney"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:background="@drawable/sendbutton"
                        android:drawableLeft="@drawable/send40"
                        android:drawableTint="@color/black"
                        android:paddingEnd="30dp"
                        android:paddingLeft="10dp"
                        android:text="SEND"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.93" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>