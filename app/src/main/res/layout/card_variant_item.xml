<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVariantItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCardVariant"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:src="@drawable/visaclassic" />

        <View
            android:id="@+id/overlaySelected"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#80000000"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgCheckmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="@color/white" />

        <!-- Card Variant Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#CC000000"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtVariantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visa Classic"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVariantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Standard benefits"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>
